@model IEnumerable<WebApp.ViewModels.AtaViewModel>

@if(Model.Any()){
    <div class="text-center mb-3 mt-3">
        <h5 class="font-weight-bold text-sapphire">Atas do Ano de @Model.Select(a => a.AnoAta).Distinct().FirstOrDefault()</h5>
    </div>
    <table id="ListAtaTable" class="table table-borderless table-striped py-4">
        <thead class="text-sapphire">
            <tr>
                <th>
                    N° Ata
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnoAta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroProcesso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPregao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroPregao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnoPregao)
                </th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ata in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ata.CodigoAta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ata.AnoAta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ata.NumeroProcesso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ata.TipoPregao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ata.NumeroPregao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ata.AnoPregao)
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger deleteAta" data-dismiss="modal" data-codeAta="@ata.CodigoAta" data-anoAta="@ata.AnoAta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <div class="not-found">
        <img src="/img/not-found.svg" />
        <div>
            <span>Sem Resultados</span>
            <p>Nenhuma Ata Encontrada</p>
        </div>
    </div>
}
