@model IEnumerable<WebApp.ViewModels.UnidadeAdministrativaViewModel>

@if (Model.Any())
{
    <table class="table table-borderless py-4">
        <thead class="text-sapphire">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeUnidadeAdministrativa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sigla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnidadeDaFederacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsferaAdministrativa)
                </th>
            </tr>
        </thead>
        <tbody class="text-muted">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUnidadeAdministrativa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sigla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadeDaFederacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsferaAdministrativa)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="not-found">
        <img src="/img/not-found.svg" />
        <div>
            <span>Sem Resultados</span>
            <p>Nenhuma Unidade Administrativa Registrada</p>
        </div>
    </div>
}