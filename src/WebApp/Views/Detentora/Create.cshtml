@using Domain.Enums
@model DetentoraViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<form asp-action="Cadastrar" class="teste">
    <div class="card shadow mt-5">
        <div class="card-header text-center">
            <h3 class="card-title">Formulário de Cadastro de Detentora</h3>
        </div>
        <div class="card-body">

        </div>
        <div class="card-body row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-3">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" onkeypress="$(this).mask('00.000.000/0000-00')" placeholder="00.000.000/0000-00" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="RazaoSocial" class="control-label"></label>
                <input asp-for="RazaoSocial" class="form-control" placeholder="Razão Social" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="col-5">
                <label asp-for="NomeFantasia" class="control-label"></label>
                <input asp-for="NomeFantasia" class="form-control" placeholder="Nome Fantasia" />
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>
            <div class="col-3 mt-3">
                <label asp-for="Pessoa" class="control-label"></label>
                <select asp-items="@Html.GetEnumSelectList<EPessoa>()" class="custom-select"></select>
                <span asp-validation-for="Pessoa" class="text-danger"></span>
            </div>
            <div class="col-4 mt-3">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" onkeypress="$(this).mask('(00) 9 0000-0000')" placeholder="(99) 9 9999-9999" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="col-5 mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Exemplo@Gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 mt-4">
                <h4 class="border py-2 text-center title-card">Endereço</h4>
            </div>

            <div class="col-3 mt-3">
                <label asp-for="Endereco.Cep" class="control-label"></label>
                <input asp-for="Endereco.Cep" class="form-control" onkeypress="$(this).mask('00.000-000')" placeholder="99.999-999" />
                <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
            </div>
            <div class="col-4 mt-3">
                <label asp-for="Endereco.Rua" class="control-label"></label>
                <input asp-for="Endereco.Rua" class="form-control" placeholder="Rua" />
                <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
            </div>
            <div class="col-5 mt-3">
                <label asp-for="Endereco.Bairro" class="control-label"></label>
                <input asp-for="Endereco.Bairro" class="form-control" placeholder="Bairro" />
                <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
            </div>
            <div class="col-3 mt-3">
                <label asp-for="Endereco.Numero" class="control-label"></label>
                <input asp-for="Endereco.Numero" class="form-control" placeholder="123" />
                <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
            </div>
            <div class="col-4 mt-3">
                <label asp-for="Endereco.Uf" class="control-label"></label>
                <input asp-for="Endereco.Uf" class="form-control" placeholder="UF" />
                <span asp-validation-for="Endereco.Uf" class="text-danger"></span>
            </div>
            <div class="col-5 mt-3">
                <label asp-for="Endereco.Municipio" class="control-label"></label>
                <input asp-for="Endereco.Municipio" class="form-control" placeholder="Município" />
                <span asp-validation-for="Endereco.Municipio" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer d-flex">
            <div class="mr-2">
                <input type="submit" value="Salvar" class="btn btn-primary shadow" />
            </div>
            <div>
                <button class="btn btn-secondary shadow" asp-action="Index">Voltar</button>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
