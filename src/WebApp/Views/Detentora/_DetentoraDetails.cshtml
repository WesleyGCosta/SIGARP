@model DetentoraViewModel


<div class="modal fade" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content ">
            <div class="mt-3 text-center">
                <h5 class="modal-title text-sapphire"><strong>Detalhes Geral da Detentora <br />@Model.Cnpj</strong></h5>
            </div>
            <hr />
            <div class="modal-body">
                <div class="d-flex flex-lg-wrap">
                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire">@Html.DisplayNameFor(model => model.Cnpj)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.Cnpj)</div>
                    </div>
                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire">@Html.DisplayNameFor(model => model.RazaoSocial)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.RazaoSocial)</div>
                    </div>
                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire">@Html.DisplayNameFor(model => model.NomeFantasia)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.NomeFantasia)</div>
                    </div>
                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire"> @Html.DisplayNameFor(model => model.Email)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire">@Html.DisplayNameFor(model => model.Pessoa)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.Pessoa)</div>
                    </div>

                    <div class="mt-4 col-md-4">
                        <span class="font-weight-bold text-sapphire">@Html.DisplayNameFor(model => model.Telefone)</span>
                        <div class="mt-2 text-muted">@Html.DisplayFor(model => model.Telefone)</div>
                    </div>
                    

                    <div class="col-12 mt-4">
                        <h4 class="border-top border-bottom text-sapphire py-2 text-center"><strong>Endereço</strong></h4>
                    </div>

                    @foreach(var endereco in Model.Enderecos){
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">CEP</span>
                            <div class="mt-2 text-muted">@endereco.Cep</div>
                        </div>
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">Bairro</span>
                            <div class="mt-2 text-muted">@endereco.Bairro</div>
                        </div>
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">Rua</span>
                            <div class="mt-2 text-muted">@endereco.Rua</div>
                        </div>
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">Número</span>
                            <div class="mt-2 text-muted">@endereco.Numero</div>
                        </div>
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">UF</span>
                            <div class="mt-2 text-muted">@endereco.Uf</div>
                        </div>
                        <div class="mt-4 col-md-4">
                            <span class="font-weight-bold text-sapphire">Municipio</span>
                            <div class="mt-2 text-muted">@endereco.Municipio</div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>