@model IEnumerable<WebApp.ViewModels.DetentoraViewModel>

<table id="ListDetentoraTable" class="table table-borderless">
    <thead class="text-sapphire">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detentora in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => detentora.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => detentora.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => detentora.NomeFantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => detentora.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => detentora.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => detentora.Pessoa)
                </td>
                <td>
                    <button type="button" class="btn btn-danger text-white" data-toggle="modal" data-target="#ConfirmDeleteModal-@detentora.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                        </svg>
                    </button>

                    @*Modal de Confirmação de exclusão*@
                    <div class="modal fade" id="ConfirmDeleteModal-@detentora.Id" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="d-flex pt-3 justify-content-center">
                                    <img class="icon-warning" src="~/img/warning.png" />
                                </div>
                                <div class="modal-body text-center">
                                    <span><strong>Confirmação de Exclusão</strong></span><br /><br />
                                    <span>Deseja excluir a Detentora do Item?</span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <button type="button" class="btn btn-primary btnDeleteDetentora" data-detentoraId="@detentora.Id" data-dismiss="modal">Confirmar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
