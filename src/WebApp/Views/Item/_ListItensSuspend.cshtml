@model IEnumerable<ItemViewModel>


<table id="ListItemTable" class="table table-borderless table-striped">
    <thead class="text-sapphire">
        <tr>
            <th>
                N° Item
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadeAquisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadeAquisicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td data-ItemId="@item.Id" class="d-flex">
                    <input class="checkBoxActiveInactive" asp-for="@item.Ativo" />
                </td>
            </tr>
        }
    </tbody>
</table>