@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="tn-box tn-box-color-2 tn-box-active">
        <div class="row">
            <div class="col-md-2">
                <img class="icon-notification" src="/img/error.png" />
            </div>
            <div class="col-md-10 pt-2">
                <p class="text-white" id="msgRetorno">Opa! Algo deu errado :(</p>
            </div>
        </div>
        <div style="padding-top:20px;" asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="tn-progress"></div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div style="padding-top: 15px;"></div>

    <div id="msg_box" class="alert alert-success slide_up text-center">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="msgRetorno">@ViewBag.Success</h3>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="tn-box tn-box-color-3 tn-box-active">
        <div class="row">    
            <div class="col-md-2">
                <img class="icon-notification" src="/img/success.png" />
            </div>
            <div class="col-md-10 pt-2">
                <p class="text-white" id="msgRetorno">@Html.Raw(TempData["Success"].ToString())</p>
            </div>
            <div class="tn-progress"></div>
        </div>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="tn-box tn-box-color-1 tn-box-active">
        <div class="row">
            <div class="col-md-2">
                <img class="icon-notification" src="~/img/warning.png" />
            </div>
            <div class="col-md-10 pt-2">
                <p id="msgRetorno">@Html.Raw(TempData["Warning"].ToString())</p>
            </div>
        </div>
        <div style="padding-top:20px;" asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="tn-progress"></div>
    </div>
}
