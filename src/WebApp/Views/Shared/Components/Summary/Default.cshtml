@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px;"></div>

    <div id="msg_box" class="alert alert-danger alert-dismissible show slide_up text-center">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="msgRetorno" style="padding-top:20px;">Opa! Algo deu errado :(</h3>
        <div style="padding-top:20px;" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div style="padding-top: 15px;"></div>

    <div id="msg_box" class="alert alert-success slide_up text-center">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="msgRetorno">@ViewBag.Sucesso</h3>
    </div>
}

@if (TempData["Sucesso"] != null)
{
    <div style="padding-top:15px;"></div>

    <div id="msg_box" class="alert alert-success slide_up text-center">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h4 id="msgRetorno">@Html.Raw(TempData["Sucesso"].ToString())</h4>
    </div>
}

@if (TempData["Atencao"] != null)
{
    <div style="padding-top:15px;"></div>

    <div id="msg_box" class="alert alert-warning slide_up text-center">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h4 id="msgRetorno">@Html.Raw(TempData["Atencao"].ToString())</h4>
    </div>
}
