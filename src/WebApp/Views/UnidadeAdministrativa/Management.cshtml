@model IEnumerable<WebApp.ViewModels.UnidadeAdministrativaViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Unidade Administrativa";
}
<div class="card shadow">
    <div class="card-header text-center">
        <h4>Gerenciamento de Unidade Admistrativa</h4>
        <div>
            <span class="text-muted">Escolha uma opção</span>
        </div>
    </div>
    <div class="card-body">
        <ul class="nav justify-content-evenly" id="pills-tab" role="tablist">
            @*Botão Informação*@

            <li class="nav-item" role="presentation">
                <button class="btn shadow transition btnTab btnOption" id="pills-ativas-tab" value="true" data-toggle="pill" data-target="#pills-ativas" type="button" role="tab" aria-controls="pills-ativas" aria-selected="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z" />
                    </svg>
                    <span class="ml-2">Ativas</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="btn shadow transition btnTab btnOption" id="pills-inativas-tab" value="false" data-toggle="pill" data-target="#pills-inativas" type="button" role="tab" aria-controls="pills-inativas" aria-selected="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                    <span class="ml-2">Inativas</span>
                </button>
            </li>
        </ul>
        <hr />

        <div class="tab-content" id="pills-tabContent">

            @*Ativas*@
            <div class="tab-pane fade" id="pills-ativas" role="tabpanel" aria-labelledby="pills-ativas-tab">
                <div id="listUnidadeAdministrativaActive" class="listUnidadeAdministrativa"></div>
            </div>

            @*Inativas*@
            <div class="tab-pane fade show" id="pills-inativas" role="tabpanel" aria-labelledby="pills-inativas-tab">
                <div id="listUnidadeAdministrativaInactive" class="listUnidadeAdministrativa"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/js/UnidadeAdministrativa/UnidadadeAdministrativa.js" type="text/javascript"></script>
    <script src="/js/UnidadeAdministrativa/UnidadeAdministrativaAjax.js" type="module"></script>
    }
