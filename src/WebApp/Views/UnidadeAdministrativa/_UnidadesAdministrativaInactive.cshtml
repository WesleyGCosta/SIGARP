@model IEnumerable<WebApp.ViewModels.UnidadeAdministrativaViewModel>

<table class="table table-borderless table-striped unidadeAdministrativaTable">
    <thead class="text-sapphire">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUnidadeAdministrativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrgaoEx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadeDaFederacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsferaAdministrativa)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unidadeAdministrativa in Model)
        {
            var simOUnao = unidadeAdministrativa.OrgaoEx.Equals(true) ? "SIM" : "NÃO";

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => unidadeAdministrativa.NomeUnidadeAdministrativa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => unidadeAdministrativa.Sigla)
                </td>
                <td>
                    @simOUnao
                </td>
                <td>
                    @Html.DisplayFor(modelItem => unidadeAdministrativa.UnidadeDaFederacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => unidadeAdministrativa.EsferaAdministrativa)
                </td>
                <td class="d-flex" data-unidadeAdministrativaId="@unidadeAdministrativa.Id" data-sigla="@unidadeAdministrativa.Sigla">
                    <button type="button" class="btn btn-secondary mr-2" data-toggle="ajax-modal-editUnidadeAdministrativa">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-info mr-2 text-white hover" data-toggle="ajax-modal-infoUnidadeAdministrativa">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-success mr-2 text-white hover" value="true" data-toggle="update">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>