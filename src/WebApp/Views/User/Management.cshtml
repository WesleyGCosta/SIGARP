@using Domain.Entities
@model IEnumerable<User>

<div class="container">
    <div class="text-center mb-3 mt-3">
    </div>
    <a class="btn btn-primary" asp-action="Create">Novo</a>
    <table id="ListAtaTable" class="table table-borderless table-striped py-4">
        <thead class="text-sapphire">
            <tr>
                <th>
                    Nome Completo
                </th>
                <th>
                    Email
                </th>
                <th>
                    Telefone
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.FirstName @user.LastName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @user.PhoneNumber
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>